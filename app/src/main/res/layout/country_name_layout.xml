<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/get_info"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/flag_imageView"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher"
                app:riv_corner_radius_top_left="1dp"
                app:riv_corner_radius_bottom_left="1dp"/>

        <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@id/flag_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Course Lesson Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/flag_imageView"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:id="@+id/capital"
                android:layout_toRightOf="@id/flag_imageView"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="TextView"
                style="@style/TextAppearance.AppCompat.Subhead"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>